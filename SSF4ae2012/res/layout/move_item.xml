<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:minHeight="45dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/move_name_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:focusable="false"
        android:layout_gravity="center"
        android:text="Move Name" />

    <TextView
        android:id="@+id/startup_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:focusable="false"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Startup" />

    <TextView
        android:id="@+id/on_hit_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="false"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:text="On Hit" />

    <TextView
        android:id="@+id/on_guard_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="false"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="On Guard" />

    <ImageButton
        android:id="@+id/full_item_imagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_marginRight="10dp"
        android:background="@drawable/next_image" />

</LinearLayout>